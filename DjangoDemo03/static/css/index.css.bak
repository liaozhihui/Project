/* 页面的基础样式 */
body,h1,h2,h3,h4,h5,h6,p,ul,ol{
	margin:0;
	padding:0;
	list-style:none;
}
body{
	font:12px youyuan,Arial;
	color:#ccc;
	background:#F1F3F4;
	padding-top:50px;
}
a{
	text-decoration:none;
	color:#ccc;
}
input:focus{
	outline:none;
}
/* 外部容器样式 */
#container{
	width:1000px;
	margin:0 auto;
}
/* 1.Top */
#top{
	height:50px;
}
#logo,#search{
	float:left;
}
#top-nav{
	float:right;
}
/* 1.1Top-logo */
#logo img{
	width:168px;
	border-radius:10px;
}
#search{
	margin-left:113px;
	position:relative;
}
#search input{
	width:380px;
	height:36px;
	border:1px solid #999;
	border-radius:18px;/* 高度的一半构成圆弧 */
	padding:0 10px;
	background:#F5F5F5;
}
#search a{
	position:absolute;
	top:0;
	right:0;
}
#search img{
	display:block;
	width:38px;
	height:38px;
}
/* 1.2Top-nav */
#top-nav{
	margin-top:3px;
}
#top-nav li{
	float:left;
	line-height:30px;
	height:30px;	
}
#top-nav b{
	border:1px solid #ccc;
	margin:0 15px;
}
#top-nav img{
	vertical-align:middle;
}

/* 2.firstpage-nav */
#nav{
	overflow:hidden;
	margin:10px 0;
	font-size:16px;
}
#nav li{
	float:left;
	margin-right:40px;
}

/* 3.banner */
#banner{
	height:400px;
	position:relative;
}
#banner img{
	width:100%;
	display:none;
}
#banner img:first-child{
	display:block;
}
#banner ul{
	position:absolute;
	left:50%;
	bottom:12px;
	/* 相当于left设置为450px */
	margin-left:-50px;
}
#banner li{
	float:left;
	height:12px;
	width:12px;
	background-color:#fff;
	border-radius:50%;
	margin:4px;
}
#banner li:first-child{
	background-color:gray;
}
/* prev,next */
#banner a{
	position:absolute;
	top:50%;
	width:35px;
	height:70px;
	margin-top:-35px;
	border-radius:5px;
}
#banner .prev{
	background:rgba(0,0,0,.3) url("../images/index/arrow-left.png") no-repeat center;
	left:5px;
}
#banner .next{
	background:rgba(0,0,0,.3) url("../images/index/arrow-right.png") no-repeat center;
	right:5px;
}

/* 4.Recommend */
#recommend{
	margin:10px 0;
	height:240px;
}
#recommend div{
	float:left;
	margin-right:10px;
	width:326px;
	height:240px;
}
.commend1{
	background:url("../images/index/sbanner1.jpg")
}
.commend1 img{
	width:130px;
	float:right;
	margin-top:50px;
	margin-right:40px;
}
.commend2{
	background:url("../images/index/sbanner2.jpg")
}
.commend2 img{
	width:240px;
	margin-top:40px;
	margin-left:40px;
}
.commend3{
	background:url("../images/index/sbanner3.jpg")
}
.commend3 img{
	width:170px;
	margin-top:30px;
	margin-left:40px;
}
#recommend img{
	transition:1s;/* 过渡效果 */
}
/* 实现鼠标悬停时的缩放效果 */
#recommend img:hover{
	transform:scale(1.1);
}
#recommend .commend3{
	margin:0;
}
/* 5.Wrapper */
#wrapper{
	height:370px;
	background:url("../images/index/index_guild.jpg");
	background-size:1000px;
	margin-bottom:20px;
}

/* 6.Main */
#main .item-type{
	overflow:hidden;
	margin-top:15px;
}
.item-type>p{
	font:bold 24px "微软雅黑";
	color:#333;
	margin-bottom:12px;/* 标题与商品展示部分空开 */
}
.item-type>p>a{
	color:#f0f0f0;
	font-size:14px;
	background:#333;
	margin-left:20px;
	padding:2px 5px;
}
.item1{
	float:left;
	width:615px;
	height:380px;
	background:#e8e8e8;
	margin-right:10px;
}
.item2,.item3{
	float:left;
	width:375px;
	height:185px;
	background:#e8e8e8;
}
.item2{
	margin-bottom:10px;
}
.item1 img{
	float:right;
	width:200px;
	margin-top:60px;
	margin-right:60px;
}
.item1 .brand{
	font:bold 24px "微软雅黑";
	color:#333;
	margin-top:95px;
	margin-left:55px;
}
.subtitle{
	font-size:14px;
	color:#333;
	margin-top:20px;
	margin-bottom:15px;
}
.price{
	font:bold 14px youyuan;
	color:#6e5557;
	margin-top:20px;
	margin-bottom:15px;
}
.detail{
	width:132px;
	height:24px;
	background:#6e5557;
	color:#fff;
	font-size:14px;
	font-weight:bold;
	text-align:center;
	line-height:24px;
	border-radius:1px;
}
.item1 .subtitle{
	margin-left:58px;
}
.item1 .price,.item1 .detail{
	margin-left:120px;
	margin-bottom:15px;
}
.item2 img{
	float:right;
	width:180px;
	margin-top:15px;
	margin-right:10px;
}
.item2 .subtitle,.item3 .subtitle{
	margin-top:30px;
	margin-left:30px;
}
.item2 .price,.item3 .price{
	margin-left:32px;
	margin-top:10px;
}
.item2 .detail,.item3 .detail{
	margin-top:20px;
	margin-left:30px;
}
.item3 img{
	float:right;
	width:120px;
	margin-top:25px;
	margin-right:30px;
}
.item2-1 img,.item3-1 img{
	width:100px;
	margin-right:50px;
}
.item2-2 img,.item3-2 img{
	margin-top:60px;
}

/* 7.Footer */
#footer{
	height:80px;
	margin-top:50px;
}
#footer div{
	float:left;
	margin:0 95px;
	text-align:center;
}

/* 8.Bottom(togather) */
#bottom{
	margin-top:30px;
}
.download{
	float:right;
}
.download img{
	width:100px;
	height:100px;
}
.service{
	float:right;
	width:125px;
	margin-right:10px;
}
.service p{
	font-size:14px;
	text-align:center;
	margin-bottom:10px;
	color:#333;
}
.service img:last-child{
	margin-top:3px;
}
#footLogo{
	width:168px;
	border-radius:10px;
}
#footFont{
	width:650px;
}